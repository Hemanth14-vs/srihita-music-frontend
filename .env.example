# Environment Variables for Music Streaming Platform
# Copy this file to .env and fill in your values

# Application Configuration
VITE_APP_NAME=MusicStream
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Music Streaming Platform

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# Mock Server Configuration
VITE_MOCK_SERVER_PORT=3001
VITE_MOCK_SERVER_HOST=localhost

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false
VITE_ENABLE_ANALYTICS=false

# Development Configuration
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=false

# Audio Configuration
VITE_DEFAULT_VOLUME=0.8
VITE_AUDIO_CROSSFADE_DURATION=3000

# Storage Configuration
VITE_LOCAL_STORAGE_PREFIX=music-app-
VITE_CACHE_DURATION=86400000

# Social Features (Mock)
VITE_ENABLE_SHARING=true
VITE_ENABLE_SOCIAL_LOGIN=false

# Performance Configuration
VITE_LAZY_LOADING=true
VITE_IMAGE_OPTIMIZATION=true

# Security Configuration (Development Only)
VITE_MOCK_AUTH_ENABLED=true
VITE_MOCK_AUTH_TOKEN_EXPIRY=3600000

# External Services (Mock URLs)
VITE_CDN_BASE_URL=https://images.pexels.com
VITE_AUDIO_CDN_URL=/samples

# Analytics (Disabled for Privacy)
VITE_ANALYTICS_ID=
VITE_GOOGLE_ANALYTICS_ID=

# Error Reporting (Development)
VITE_SENTRY_DSN=
VITE_ERROR_REPORTING_ENABLED=false

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_CACHE_NAME=music-streaming-v1

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_SOURCEMAP=true

# Testing Configuration
VITE_TEST_TIMEOUT=10000
VITE_TEST_COVERAGE_THRESHOLD=85

# Deployment Configuration
VITE_DEPLOY_URL=
VITE_DEPLOY_BRANCH=main

# Team Configuration (for development)
VITE_TEAM_NAME=Music Streaming Team
VITE_PROJECT_DEADLINE=2025-09-26

# Faculty Review Configuration
VITE_DEMO_MODE=false
VITE_VERIFICATION_MODE=false

# Notes:
# - All VITE_ prefixed variables are available in the browser
# - Never commit sensitive data to version control
# - Use different .env files for different environments
# - Mock values are provided for development purposes
# - Replace with real values for production deployment